<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginVertical="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img"
        android:layout_width="150dp"
        android:layout_height="170dp"
       app:shapeAppearanceOverlay="@style/RoundedSquare"
        android:scaleType="centerCrop"
        tools:src="@drawable/img_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/category"
        />
    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Sports"
        android:textSize="18sp"
        android:maxLines="1"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"

        app:layout_constraintStart_toEndOf="@+id/img"
        app:layout_constraintTop_toTopOf="@id/img"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        tools:text="Why are football's biggest clubs starting a new"
        android:maxLines="2"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@+id/img"
        app:layout_constraintTop_toBottomOf="@id/category"
        />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_author"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:shapeAppearanceOverlay="@style/CircleSquare"
            android:scaleType="centerCrop"
            tools:src="@drawable/img_1"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toStartOf="@id/author"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@id/img"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Alaagggggg"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            android:textColor="#79828B"
            android:layout_gravity="end"
            app:layout_constraintStart_toEndOf="@id/img_author"
            app:layout_constraintTop_toTopOf="@id/img_author"
            app:layout_constraintEnd_toStartOf="@id/view"
            />
        <View
            android:id="@+id/view"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:background="@drawable/bg_view"
            android:backgroundTint="@color/gray"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintStart_toEndOf="@id/author"
            app:layout_constraintEnd_toStartOf="@id/date"
            app:layout_constraintTop_toTopOf="@id/img_author"
            />
        <TextView
            android:id="@+id/date"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            tools:text="3 hours"
            android:textStyle="bold"
            android:maxLines="1"
            android:textSize="12sp"
            android:textColor="#79828B"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/view"
            app:layout_constraintTop_toTopOf="@id/img_author"
            />



</androidx.constraintlayout.widget.ConstraintLayout>